/*A program that converts spelled-out numbers such as “zero” and “two” into digits, such as 0 and 2. When the user
inputs a number, the program should print out the corresponding digit. Do it for the values 0, 1, 2, 3, and 4 and write out
not a number I know if the user enters something that doesn’t correspond, such as stupid computer!.
*/


#include "pch.h"
#include <iostream>
#include <string>


using namespace std;

string num1;


int main()
{
	cout << "Input a spelled out number from zero four and hit enter." <<endl; //Instructions.

	cin >> num1;
		
	if (num1.compare ("zero") == 0) {
		// zero to 0.
		cout << "0" << endl;
	} else if (num1.compare("one") == 0) {
		// one to 0.
		cout << "1" << endl;
	} else if (num1.compare("two") == 0) {
		// two to 2.
		cout << "2" << endl;
	} else if (num1.compare("three") == 0) {
		// three to 3.
		cout << "3" << endl;
	} else if (num1.compare("four") == 0) {
		// four to 4.
		cout << "4" << endl;
	} else {
		// Output for any entry not known.
		cout << "Not a number i know!!!!" << endl;
	}

	return 0;
	 
}
